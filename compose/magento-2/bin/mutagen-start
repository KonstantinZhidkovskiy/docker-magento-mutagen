#!/bin/bash
mutagen daemon start

mutagen create \
    --default-file-mode=0644 \
    --default-directory-mode=0755 \
    --sync-mode=two-way-resolved \
    --ignore=./.idea \
    --ignore=./bin \
    --ignore=./generated \
    --ignore=./pub/media/catalog/product \
    --ignore=./pub/static \
    --ignore=./var \
    --ignore=./vendor \
    --ignore-vcs \
    src docker://$(docker-compose ps|grep phpfpm|awk '{print $1}')/var/www/html
