#!/bin/bash

echo
printf "Fetching latest version..."
mkdir tmp-fetch
cd tmp-fetch
git init -qqq
git remote add origin https://github.com/mage2click/docker-magento-mutagen
git fetch origin -qqq
git checkout origin/feature/self-update -- compose/magento-2
cp -R compose/magento-2/bin/* ../bin/ 2>/dev/null
cd ../
rm -rf tmp-fetch
printf " DONE!"
echo
echo
