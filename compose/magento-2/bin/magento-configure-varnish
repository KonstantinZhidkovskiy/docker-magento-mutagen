#!/bin/bash
echo "Enabling Varnish as Caching Application for Full Page Cache..."
bin/clinotty bin/magento config:set --scope=default --scope-code=0 system/full_page_cache/caching_application 2
bin/clinotty bin/magento config:set --scope=default --scope-code=0 system/full_page_cache/varnish/access_list localhost,app
bin/clinotty bin/magento config:set --scope=default --scope-code=0 system/full_page_cache/varnish/backend_port 8000
bin/clinotty bin/magento setup:config:set --http-cache-hosts=varnish:80
